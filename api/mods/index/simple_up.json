{
  "name": "标准单点反馈传感器",
  "vars": [
    {
      "remark": "数据点0",
      "content": [
        {
          "label": "name",
          "type": "text",
          "remark": "数据量名称"
        },
        {
          "label": "label",
          "type": "text",
          "remark": "数据上传标志"
        },
        {
          "label": "format_type",
          "type": "select",
          "remark": "数据点展示格式",
          "vars": ["number", "text"]
        },
        {
          "label": "show_max",
          "type": "number",
          "remark": "数据点最大值",
          "default": -1
        },
        {
          "label": "show_min",
          "type": "number",
          "remark": "数据点最小值",
          "default": -1
        },
        {
          "label": "format_type",
          "type": "select",
          "remark": "数据点格式类型",
          "vars": ["int", "float", "boolean", "string"]
        },
        {
          "label": "format_unit",
          "type": "text",
          "remark": "数据点单位"
        },
        {
          "label": "format_round",
          "type": "number",
          "remark": "数据点小数点后数字位数(仅float类型生效)",
          "default": 0,
          "vars": {
            "max": 9,
            "min": 1,
            "step": 1
          }
        }
      ]
    }
  ],
  "global": [
    {
      "label": "driver",
      "type": "select",
      "remark": "驱动程序",
      "default": "simple",
      "vars": [
        "simple",
        "json"
      ]
    }
  ]
}